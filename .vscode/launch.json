{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Next.js Dev",
			"type": "node",
			"program": "node_modules/next/dist/bin/next",
			"args": [ "dev" ],
			"request": "launch",
			"outputCapture": "std",
			"runtimeArgs": ["--inspect"],
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/",
				"!/node_modules/**"
			],
			"serverReadyAction": {
				"action": "startDebugging",
				"name": "EdgeBrowserInternal",
				"killOnServerStop": true,
				"pattern": "- Local:.+(https?://.+)"
			}
		},
		{
			"name": "EdgeBrowserInternal",
			"vscode-edge-devtools.browserFlavor": "Beta",
			"type": "vscode-edge-devtools.debug",
			"request": "launch",
			"sourceMapPathOverrides": {
				"webpack://_N_E/src/*": "${webRoot}/node_modules/next/dist/*"
			},
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "ZenBrowser",
			"type": "firefox",
			"firefoxExecutable": "C:/Program Files/Zen Browser/zen.exe",
			"webRoot": "${workspaceFolder}",
			"request": "launch",
			"url": "http://localhost:3000/",
			"keepProfileChanges": false,
			"preferences": {
				"zen.welcomeScreen.enabled": false,
				"zen.view.compact": true,
				"zen.view.compact.hide-tabbar": true,
				"zen.view.compact.hide-toolbar": true
			}
		}
	]
}
